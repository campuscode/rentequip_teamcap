<%= simple_form_for @price do |f| %>
  <div class="form-group">
    <% if flash[:errors] %>
      <ul>
      <% flash[:errors].each do |error_message| %>
        <li><%= error_message %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :equipment_id, 'Equipamento' %>
    <%= f.collection_select :equipment_id, @equipment, :id, :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :deadline, 'Prazo' %>
    <%= f.text_field :deadline, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :value, 'Valor' %>
    <%= f.text_field :value, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
