<div class="prices">
  <h1>Tabela de Preços</h1>
  <table class='table table-striped table-bordered table-hover'>
    <tr>
      <th>Equipamento</th>
      <th>Prazo</th>
      <th>Valor</th>
    </tr>
    <%= render @prices if @prices %>
    <%= render partial: 'no_data', locals: { model: 'Preço', columns: 3 } if @prices.blank? %>
  </table>
</div>
