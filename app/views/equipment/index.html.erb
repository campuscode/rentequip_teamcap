<h1>Lista de Equipamentos</h1>
 <div><p><%= link_to 'Novo Equipamento', new_equipment_path %></p></div>

  <table class='table table-striped table-bordered table-hover'>
    <tr>
      <th>Nome</th>
      <th>Marca</th>
    </tr>
      <% if @equipment.empty? %>
      <tr>
        <td colspan="2"><%= flash[:alert] = 'Não há equipamentos cadastrados' %></td>
      </tr>
      <% else %>
        <% @equipment.each do |equipment| %>
          <tr>
            <td><%= link_to equipment.name, equipment %></td>
            <td><%= equipment.brand %></td>
          </tr>
        <% end %>
      <% end %>
  </table>
