<h1>Lista de Equipamentos</h1>
 <div><p><%= link_to 'Novo Equipamento', new_equipment_path %></p></div>

  <table class='table table-striped table-bordered table-hover'>
    <tr>
      <th>Nome</th>
      <th>Marca</th>
    </tr>
    <tr>
      <% if @equipment.empty? %>
        <td colspan="2"><%= flash[:alert] = 'Não há equipamentos cadastrados' %>
        </td>
      <% else %>
        <% @equipment.each do |equipment| %>
            <td><%= link_to equipment.name, equipment %></td>
            <td><%= equipment.brand %></td>
        <% end %>
      <% end %>
    </tr>
  </table>
