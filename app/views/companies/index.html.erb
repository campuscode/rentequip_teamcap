<h1>Empresas Cadastradas</h1>

  <table class='table table-striped table-bordered table-hover'>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th colspan="2">Telefone</th>
    </tr>
      <% if @companies.empty? %>
        <td colspan="2"><%= flash[:alert] = 'NÃ£o hÃ¡ empresas cadastradas' %></td>
      <% else %>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.mail %></td>
            <td><%= company.phone %></td>
            <td><%= link_to 'Ver detalhes', company %></td>
          </tr>
        <% end %>
      <% end %>
  </table>
